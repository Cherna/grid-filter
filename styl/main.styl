@import '../node_modules/normalize.css/normalize.css'

body
  background-color #f1f1f1
  font-family 'Open Sans', Helvetica, Arial, sans-serif
ul
  list-style none
  li
    list-style none

.example
  margin 100px 0

.input-cont
  text-align center
  label
    font-size 12px
  .search-input
    margin-left 10px
    background-color #ddd
    border none
    border-radius 3px
    padding 4px 10px
    outline 0
    vertical-align middle

.table
  width 80%
  margin 50px auto
  .table-row
    display flex
    border-bottom 1px solid #cacaca
    border-radius 3px
    padding 0
    margin 0
    transition background-color 0.18s ease
    &:hover
      background-color #efefef
    li
      width 33.333%
      text-align center
      margin 0 20px
      padding 10px
      color #777